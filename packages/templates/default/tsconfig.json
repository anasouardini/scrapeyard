{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6", "dom"],
    "jsx": "react",

    /* Specify what module code is generated. */
    "module": "CommonJS",
    /* Specify the root folder within your source files. */
    // "rootDir": ".",
    "outDir": "./build",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "$/*": ["./*"],
      "$jobboards/*": ["./bots/jobboards/*"],
      "$jobboards-components/*": ["./bots/jobboards/ui/views/src/components/*"],
      "$jobboards-ui/*": ["./bots/jobboards/ui/views/src/*"],
      "$home/*": ["./bots/home/*"],
      "$home-components/*": ["./bots/home/ui/views/src/components/*"],
      "$home-ui/*": ["./bots/home/ui/views/src/*"]
    }
  },
  "include": [
    "./src"
    // no linting for tempalates for now
    // "./src/templates"
  ],
  "exclude": ["node_modules", "build"]
}
