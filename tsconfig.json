{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es6", "dom"],
    "jsx": "react",

    /* Specify what module code is generated. */
    "module": "CommonJS",

    /* Specify the root folder within your source files. */
    // "rootDir": ".",

    "allowJs": true,
    "outDir": "./lib",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,

    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "$/*": ["./*"],
      "$utils/*": ["./root/utils/*"],
      "$ui/*": ["./root/ui/*"]
      /*[add aliases above this line]*/
    }
  },
  "include": ["*.ts", "*.tsx"],
  "exclude": ["node_modules", "lib", "lib", "build", ".git"]
}
